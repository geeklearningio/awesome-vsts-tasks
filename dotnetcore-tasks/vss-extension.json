{
    "manifestVersion": 1,
    "id": "gl-vsts-tasks-dotnetcore",
    "name": "Geek Learning VSTS Tasks for .NET Core",
    "version": "0.0.5",
    "publisher": "geeklearningio",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services.Cloud"
        }
    ],    
    "description": "Geek Learning additionnal tasks to help you build and publish your .NET Core applications.",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "extension-icon.png"        
    },
    "tags": [
        "dotnetcore"
    ],
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE.md"
        }
    },
    "links": {
        "home": {
            "uri": "http://geeklearning.io/"
        },
        "getstarted": {
            "uri": "http://geeklearning.io/"
        },
        "learn": {
            "uri": "http://geeklearning.io/"
        },
        "support": {
            "uri": "http://geeklearning.io/"
        },
        "repository": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks"
        },
        "issues": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks/issues"
        }
    },
    "branding": {
        "color": "#008B8B",
        "theme": "light"
    },   
    "files": [
        {
            "path": "DnuInstaller"
        }     
    ],
    "contributions": [
        {
            "id": "dnu-installer-task",
            "type": "ms.vss-distributed-task.task",
            "description": "Installs or restores missing packages using DNU",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "DnuInstaller"
            }
        }
    ]
}