{
    "manifestVersion": 1,
    "id": "gl-vsts-tasks-utility",
    "name": "Utility Tasks",
    "version": "0.0.60",
    "publisher": "geeklearningio",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services.Cloud"
        }
    ],
    "description": "Awesome additionnal utility tasks.",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "extension-icon.png"
    },
    "tags": [
        "utility",
        "zip",
        "json",
        "xml",
        "patch"
    ],
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE.md"
        }
    },
    "links": {
        "home": {
            "uri": "http://geeklearning.io/"
        },
        "getstarted": {
            "uri": "http://geeklearning.io/"
        },
        "learn": {
            "uri": "http://geeklearning.io/"
        },
        "support": {
            "uri": "http://geeklearning.io/"
        },
        "repository": {
            "uri": "https://github.com/geeklearningio/awesome-vsts-tasks"
        },
        "issues": {
            "uri": "https://github.com/geeklearningio/awesome-vsts-tasks/issues"
        }
    },
    "branding": {
        "color": "#008B8B",
        "theme": "light"
    },
    "files": [
        {
            "path": "Zip"
        },
        {
            "path": "JsonPatch"
        },
        {
            "path": "CopyExt"
        },
        {
            "path": "LoadJsonVariables"
        },
        {
            "path": "XmlPatch"
        },
        {
            "path": "SemverToAndroidVersionCode"
        }
    ],
    "contributions": [
        {
            "id": "zip-task",
            "type": "ms.vss-distributed-task.task",
            "description": "Zips files",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Zip"
            }
        },
        {
            "id": "json-patch-task",
            "type": "ms.vss-distributed-task.task",
            "description": "Applies a json patch to a file",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "JsonPatch"
            }
        },
        {
            "id": "xml-patch-task",
            "type": "ms.vss-distributed-task.task",
            "description": "Applies a json patch to an xml file",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "XmlPatch"
            }
        },
        {
            "id": "copy-ext-task",
            "type": "ms.vss-distributed-task.task",
            "description": "Copy files with extended minimatch (micromatch) support",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "CopyExt"
            }
        },
           {
            "id": "load-json-variables-task",
            "type": "ms.vss-distributed-task.task",
            "description": "Load json files into build variables",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "LoadJsonVariables"
            }
        },
        {
            "id": "semver-to-android-version-code",
            "type": "ms.vss-distributed-task.task",
            "description": "Encodes Semver to android",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "SemverToAndroidVersionCode"
            }
        }
    ]
}